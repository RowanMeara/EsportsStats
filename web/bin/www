#!/usr/bin/env node

/**
 * Development Launch Script
 */

const app = require('../app')
const queries = require('../server/queries')

const debug = require('debug')('web:server')
const http = require('http')
const cron = require('node-cron')
const path = require('path')
const fs  = require('fs')

/**
 * Get port from environment and store in Express.
 */

let port = normalizePort(process.env.PORT || '3000')
app.set('port', port)

// Update Cache so queries are responsive
cron.schedule('* 30 * * * *', queries.refreshCache, false)
queries.refreshCache()

// TODO: find less hacky way to serve the material components library
// TODO: gulp would work?
loadMaterialComponents()

/**
 * Create HTTP server.
 */

let server = http.createServer(app)

/**
 * Listen on provided port only to local interfaces.  It is not recommended
 * to expose node.js applications to internet.
 */

server.listen(port, 'localhost')
server.on('error', onError)
server.on('listening', onListening)

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort (val) {
  let port = parseInt(val, 10)

  if (isNaN(port)) {
    // named pipe
    return val
  }

  if (port >= 0) {
    // port number
    return port
  }

  return false
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError (error) {
  if (error.syscall !== 'listen') {
    throw error
  }

  let bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges')
      process.exit(1)
    case 'EADDRINUSE':
      console.error(bind + ' is already in use')
      process.exit(1)
    default:
      throw error
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening () {
  let addr = server.address()
  let bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port
  debug('Listening on ' + bind)
}

function loadMaterialComponents () {
  let js = path.join(__dirname, '../node_modules/material-components-web/dist/material-components-web.js')
  let css = path.join(__dirname, '../node_modules/material-components-web/dist/material-components-web.css')
  let prodJs = path.join(__dirname, '../public/javascripts/material-components-web.js')
  let prodCSS = path.join(__dirname, '../public/stylesheets/material-components-web.css')
  if (!fs.existsSync(prodJs)) {
    fs.createReadStream(js).pipe(fs.createWriteStream(prodJs))
  }
  if (!fs.existsSync(prodCSS)){
    fs.createReadStream(css).pipe(fs.createWriteStream(prodCSS))
  }
}
